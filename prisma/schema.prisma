generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  name        String
  cpf         String     @unique @db.VarChar(11)
  phone       String     @db.VarChar(11)
  email       String     @unique
  role        Role       @default(USER)
  password    String
  createdAt   DateTime   @default(dbgenerated("NOW()"))
  architect   Architect? @relation(fields: [architectId], references: [id])
  architectId String?
}

model Architect {
  id        String   @id @default(uuid())
  name      String
  cau       String   @unique @db.VarChar(10)
  cpf       String   @unique @db.VarChar(11)
  phone     String   @db.VarChar(11)
  email     String   @unique
  role      Role     @default(ARCHITECT)
  password  String
  createdAt DateTime @default(dbgenerated("NOW()"))
  user      User[]
}

enum Role {
  USER
  ADMIN
  ARCHITECT
}
